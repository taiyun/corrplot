PKG <- "corrplot"
VERSION <- packageVersion(PKG)
TITLE <- packageDescription(PKG, fields = "Title")

# all contributors, see also http://www.loc.gov/marc/relators/relaterm.html
ALL <- eval(parse(text=packageDescription(PKG, fields = "Authors@R")))

# authors only
AUTHORS <- ALL[[ sapply(ALL$role, function(x) "aut" %in% x) ]]
AUTHORS <- paste(AUTHORS$given, AUTHORS$family, collapse = " and ")

URL <- packageDescription(PKG, fields = "URL")
YEAR <- strftime(packageDescription(PKG, fields = "Date"), "%Y")

bibentry("Manual",
	title = sprintf("R package \"%s\": %s", PKG, TITLE),
	author = paste(AUTHORS, "et al."),
	year = YEAR,
	note = sprintf("(Version %s)", VERSION),
	url = URL,

	mheader = sprintf("To cite %s in publications use:", PKG),

	textVersion = sprintf(
    "%s (%s). R package \"%s\": %s (Version %s). Available from %s",
    AUTHORS, YEAR, PKG, TITLE, VERSION, URL
	)
)
